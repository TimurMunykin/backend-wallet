{
  "name": "backend-wallet-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for backend wallet API with OAuth 2.1 support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:oauth": "node dist/oauth-mcp-server.js",
    "start:http": "node dist/simple-http-oauth-server.js",
    "dev": "nodemon",
    "dev:oauth": "nodemon --exec ts-node src/oauth-mcp-server.ts",
    "dev:http": "nodemon --exec ts-node src/simple-http-oauth-server.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "npm run build && node test/demo.js",
    "test:oauth": "npm run build && node test/oauth-demo.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "oauth",
    "finance",
    "wallet",
    "backend"
  ],
  "author": "Finance App Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.21",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=24.0.0"
  }
} 